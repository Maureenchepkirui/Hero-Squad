{{#partial "content"}}
    <section class="hero-land">
        <h2> <a class="btn" href="/hero-form" >Create Your Hero</a></h2>
        <div class="heroes">

            {{#each hero}}
                <div class="hero-item">

                    <p>Name: {{ name }} </p>
                    <p>Age: {{ age }}</p>
                    <p>Special power: {{ power }}</p>
                    <p>Weakness: {{ weakness }}</p>
                    <p>Id: {{ id }}</p>
                    <a href="new/{{id}}" class="btns">Learn More</a>
                    <a href="/squad-form" class="btns">Add {{ name }} To Squad</a>
                </div>

            {{/each}}
        </div>
    </section>
{{/partial}}
{{> layout.hbs}}
