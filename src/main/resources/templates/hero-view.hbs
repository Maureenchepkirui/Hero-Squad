{{#partial "content"}}
    <h1 class="light">CURRENT HEROES</h1><br><br>

    <div class="row">
        <div class="col-md-6">
            <div class="bagone">
                {{#if heroes}}

                    {{#each heroes }}
                        <h3>{{name}} </h3>
                        <a href="/heroes/{{id}}"><button class="light btn-warning btn-sm">Details</button></a><br><br><hr>

                    {{/each}}
                {{else}}
                    <p>No Heroes Available!</p>
                {{/if}}
            </div>
        </div>
        <div class="col-md-6">

            {{#if hero}}
                <div class="card">

                    <div class="card-body">
                        <h4 class="card-title">{{hero.name}}</h4>
                        <hr>
                        <p class="card-text">Age : {{hero.age}}</p><br>
                        <p class="card-text">Special Powers : {{hero.powers}}</p><br>
                        <p class="card-text">Weakness: {{hero.weakness}}</p><br>
                        <p class="card-text">Defence : {{hero.defence}}</p><br>
                        <p class="card-text">Attack : {{hero.attack}}</p><br>
                        <p class="card-text">Occupied : {{hero.occupied}}</p><br>
                        <a href="/hero/{{hero.id}}/delete"><button class="light btn-warning btn-sm">Delete Hero</button></a>


                    </div>
                </div>
            {{/if}}


        </div>
    </div>


{{/partial}}
{{#partial "footer"}}
    {{#if heroes}}
        <a href="/heroes/delete"><button class="light btn-sm btn-warning"> Delete All Heroes</button></a>
    {{else}}
    {{/if}}
{{/partial}}



{{> layout.hbs}}