{{#partial "content"}}
    <section class="landing-pg">
        <div class="land-left"></div>
        <div class="land-right"></div>
        <form class="form" action="/new/hero" method="post">
            <h1>Create Your Hero</h1>
            <input type="text" placeholder="Name of hero..." name="name" required>
            <input type="number" placeholder="Age of hero...." name="age" required>
            <input type="text" placeholder="Special powers...." name="power" required>
            <input type="text" placeholder="Weakness...." name="weakness" required>

            <input class="btn btn-info" type="submit">
        </form>
    </section>
{{/partial}}
{{> layout.hbs}}