
{{#partial "content"}}
    <section class="landing-pg">
        <div class="land-left">
        </div>
        <div class="land-right">
        </div>

        <div class="squad">
            <div id="newMember">
                <p class="close">&cross;</p>
                <div class="col-md-6">
                <h2>ADD HEROES TO A SQUAD</h2>
                  {{#each heroes}}
                      <p>Name: {{name}}</p>
                      <p>Super power: {{ power }}</p>
                     <a class="btns" href="/squad-form">Add To Squad</a>
                  </div>
                </div>
            {{/each}}
            </div>
            <h2>
                <a class="btns" href="/squad-form">Create Your Squad</a>
                <br><br>
        {{#if squads}}
                AVAILABLE SQUADS
            </h2>
        {{#each squads}}
            <div class="squad-cont">
                <img src="" alt="">
                <div>
                  <h1>{{ squadName }} </h1>
                    <p>Id: {{squadId}}</p>
                    <p>Purpose: {{cause}}</p>
                    <p>Max participants: {{ size }}</p>
                    <br><br>
                  <h3>MEMBERS</h3>
                    {{#each squadMembers}}
                        <div class="member-cont">
                            <h5>Name: {{this.name}}</h5>
                            <h5>Power: {{power}}</h5>
                            <Button class="btns">Remove</Button>
                        </div>
                    {{/each}}


                </div>
            </div>
        {{/each}}
        {{else}}
            <h2>Please create a squad to continue</h2>
        {{/if}}
        </div>

    </section>
{{/partial}}
{{#partial "footer"}}
    <script type="text/javascript" src="/js/jquery-3.4.0.min.js"></script>
    <script type="text/javascript" src="/js/script.js"></script>
{{/partial}}
{{> layout.hbs}}