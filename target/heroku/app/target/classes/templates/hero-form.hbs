{{#partial "content"}}
        <div class="formstyle">
            <form class="" action="/heroes/new" method="post">
                <h1>CREATE HEROES</h1>
                <hr>
                <div class="form">
                    <label for="name">Name</label><br>
                    <input type="text" placeholder="Enter your hero's name..."name="name" id="name"><br>
                    <label for="age">Age</label><br>
                    <input type="number"placeholder="Enter your hero's age..." name="age" id="age" ><br>
                    <label for="powers">Special Powers</label><br>
                    <input type="text" placeholder="Enter your hero's special powers..."name="powers" id="powers"><br>
                    <label for="weakness">Weakness</label><br>
                    <input type="text" placeholder="Enter your hero's weakness..."name="weakness" id="weakness"><br>
                    <label for="defence">Defense</label><br>
                    <input type="number" placeholder="Choose your hero's defence number...."name="defence" id="defence" max="100" min="1"><br>
                    <label for="attack">Attack</label><br>
                    <input type="number"placeholder="Choose your hero's attack number...." name="attack" id="attack"><br>

                </div>


                <button type="submit" class="light btn-warning btn-sm">Create</button>

            </form>
        </div>


{{/partial}}
{{> layout.hbs}}